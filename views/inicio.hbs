{{!-- Carrossel --}}
{{>carrossel}}

{{!-- formulario --}}
<div class="container w-100 ">
    <div class="row d-flex justify-content-space-around align-items-center">
        <div class="container col-5" id="container">
            <form action="/cadastrar" method="post" enctype="multipart/form-data" class="w-100">
                <h2 class="text-light text-center w-100 mb-2">Cadastro de produtos</h2>
                <div class="row" id="divPai">
                    <input type="text" class="form-control" name="nomeProduto" id="#" placeholder="Nome do Produto">
                    <input type="number" class="form-control" step="0.01" name="valorProduto" id="#" min="0"
                        placeholder="Valor do Produto">
                    <input class="form-control" type="file" name="imgNome">
                </div>
                <div class="mt-3 w-100 div-btn">
                    <input class="btn btn-primary w-50" id="btn" type="submit" value="Enviar">
                </div>
            </form>
        </div>

        {{!-- Mensagens de sussesso e erro --}}
        <div class="w-50">

            {{>mensagens}}

        </div>
    </div>
</div>
{{!-- Cards --}}
{{>cards}}